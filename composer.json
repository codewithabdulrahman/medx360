{
    "name": "medx360/plugin",
    "description": "MedX360 - Healthcare appointment booking system built with React",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "MedX360 Solutions",
            "email": "support@medx360.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "pimple/pimple": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MedX360\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MedX360\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=WordPress src/",
        "lint-fix": "phpcbf --standard=WordPress src/",
        "post-install-cmd": [
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "composer dump-autoload"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
